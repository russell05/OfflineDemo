<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:padding="4vp"
    >

    <Button
        ohos:id="$+id:button_tool"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_size="10fp"
        ohos:text="UTC+8 TIME"
        ohos:background_element="$graphic:top_button"
        ohos:vertical_center="true"
        ohos:element_left="$media:realtime_height"
        ohos:element_padding="5vp"
        ohos:left_padding="5vp"
        />

    <Text
        ohos:id="$+id:text_tool"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:vertical_center="true"
        ohos:right_of="$id:button_tool"
        ohos:left_margin="5fp"
        ohos:text_size="16fp"
        ohos:text_color="#000000"
        ohos:text_font="sans-serif-medium"
        ohos:text_weight="700"
        ohos:text="--"
        />
</DependentLayout>